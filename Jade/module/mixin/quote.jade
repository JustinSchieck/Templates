
-var data_quote = []

- data_quote[0] = {}
- data_quote[0].text = '" Today I choose life. Every morning when I wake up I can choose joy, happiness, negativity, pain... To feel the freedom that comes from being able to continue to make mistakes and choices - today I choose to feel life, not to deny my humanity but embrace it."'
- data_quote[0].name = "Kevyn Aucoin"

- data_quote[1] = {}
- data_quote[1].text = '" Take up one idea. Make that one idea your life - think of it, dream of it, live on that idea. Let the brain, muscles, nerves, every part of your body, be full of that idea, and just leave every other idea alone. This is the way to success."'
- data_quote[1].name = "Swami Vivekananda"

- data_quote[2] = {}
- data_quote[2].text = '" Success or failure depends more upon attitude than upon capacity successful men act as though they have accomplished or are enjoying something. Soon it becomes a reality. Act, look, feel successful, conduct yourself accordingly, and you will be amazed at the positive results."'
- data_quote[2].name = "William James"
//- testimonial-01 (parallax|fade| no logo| no c-nav| no di-nav)
mixin quote-item-01(item)
    .quote-item
        .item-content
            p.heading-icon-2.color-light= item.text
mixin quote-slider-01(Class)
    .container
        .row
            .col-xs-12.text-center.remove-col-padding-2
                .quote-slider-01.simple-slider(class=Class)
                    each item in data_quote
                        +quote-item-01(item)
//- testimonial-02 (bgc/parallax |fade| logo| no c-nav| di-nav)
mixin quote-item-02(item)
    .quote-item.clearfix
        .item-icon
            i.icon-quote
        .item-content
            p.comment= item.text
            .name.text-right
                p= item.name
mixin quote-slider-02(Class)
    .container
        .row
            .col-lg-10.col-lg-offset-1.col-xs-12.remove-col-padding-2.section-block
                .quote-slider-02.simple-slider.dir-nav(class=Class)
                    each item in data_quote
                        +quote-item-02(item)
