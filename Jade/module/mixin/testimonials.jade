//- testimonial-01 (parallax|fade| no img| no c-nav| no di-nav)
mixin testimonial-item-01(item)
    .testimonial-item
        .item-content
            p.comment= item.text
            p.name.text-right= item.name
mixin testimonial-01(Class, Header_class)
    .container
        .row
            .col-lg-10.col-lg-offset-1.col-xs-12.text-center.color-light
                h4.testimonial-heading-01(class= Header_class ) TESTIMONIALS
                .testimonial-01.simple-slider(class=Class)
                    each item in data_testimonial
                        +testimonial-item-01(item)

//- testimonial-02 (bgc |fade| img| no c-nav| di-nav)
mixin testimonial-item-02(item)
    .testimonial-item.clearfix
        .item-image
            img(src=item.imgUrl alt="Testimonial Image")
        .item-content
            p.comment= item.text
            p.name.text-right= item.name
mixin testimonial-02(Class)
    .container
        .row
            .col-xs-12.remove-col-padding-2
                .testimonial-02.simple-slider.dir-nav(class=Class)
                    each item in data_testimonial
                        +testimonial-item-02(item)
