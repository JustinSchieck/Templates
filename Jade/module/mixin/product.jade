-var data_productSlider = []

-data_productSlider[0] = {imgUrl: "assets/images/product-img-1.jpg"} 
-data_productSlider[1] = {imgUrl: "assets/images/product-img-2.jpg"} 
-data_productSlider[2] = {imgUrl: "assets/images/product-img-3.jpg"} 
-data_productSlider[3] = {imgUrl: "assets/images/product-img-4.jpg"} 

mixin product-image-item(item)
    .product-image-item
        .item-image
            img.mfp-item(src=item.imgUrl data-mfp-src=item.imgUrl alt="Portfolio slider image")

mixin product-image-slider(Class2,Class1)
    .product-image-slider-wrapper(class=Class1)
        .product-image-slider.simple-slider.control-nav(class=Class2)
            each item in data_productSlider
                +product-image-item(item)
