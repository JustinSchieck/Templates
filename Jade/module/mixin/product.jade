//- ============================

//- Thumbnail Slider 1
//- ======
-var data_productThumbnailSlider_1 = []

-data_productThumbnailSlider_1[0] = {imgUrl: "assets/images/product-img-1.jpg"}

-data_productThumbnailSlider_1[1] = {imgUrl: "assets/images/product-img-2.jpg"}

-data_productThumbnailSlider_1[2] = {imgUrl: "assets/images/product-img-3.jpg"}

-data_productThumbnailSlider_1[3] = {imgUrl: "assets/images/product-img-4.jpg"}

-data_productThumbnailSlider_1[4] = {imgUrl: "assets/images/product-img-5.jpg"}

//- syn 1
//- ======

mixin product-thumbnail-slider-syn-1-item(item)
    .product-slider-item
        .item-image
            img.mfp-item(src=item.imgUrl data-mfp-src=item.imgUrl alt="Product slider image")

//- Section
mixin product-thumbnail-slider-syn-1(data,Class)
    .product-syn-slider-1.syn-slider-1.dir-nav(class=Class)
        each item in data
            +product-thumbnail-slider-syn-1-item(item)

//- Syn 2
//- ======

mixin product-thumbnail-slider-syn-2-item(item)
    .product-slider-item
        .item-image.text-center.layout-after
            img(src=item.imgUrl alt="Product slider image")

//- Section
mixin product-thumbnail-slider-syn-2(data,Class)
    .product-syn-slider-2-wrapper
        .product-syn-slider-2.syn-slider-2(class=Class)
            each item in data
                +product-thumbnail-slider-syn-2-item(item)

//- Combine
//- ======

mixin product-thumbnail-slider(data,ID,Class1,Class2)
    -data = (data) ? data : data_productThumbnailSlider_1;
    .product-thumbnail-slider(id=ID)
        +product-thumbnail-slider-syn-1(data,Class1)
        +product-thumbnail-slider-syn-2(data,Class2)

