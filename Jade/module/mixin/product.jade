//- Product option
mixin product-option
    form.product-option
        .clearfix
            .colour
                div
                    p Colour:
                div
                    label.color-option-1
                        input(type="radio" name="product-1" value="color 1")
                        span
                            i.radio-button
                    label.color-option-2
                        input(type="radio" name="product-1" value="color 2" checked)
                        span
                            i.radio-button
                    label.color-option-3
                        input(type="radio" name="product-1" value="color 3")
                        span
                            i.radio-button
            .size
                div
                    p Size:
                div
                    select(name="size")
                        option(value="none") -
                        option(value="S") S
                        option(value="M") M
                        option(value="L") L
        .clearfix
            .quantity-wrapper
                .quantity
                    p Quantity:
                    input(type="number", name="quantity", value="1")
            .cart-button
                a(href="shop-cart.html").normal-btn.normal-btn-gray.btn-size-3 
                        i.icon-svg-icon-16
                        |ADD TO CART
