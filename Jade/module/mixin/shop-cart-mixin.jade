mixin shop-cart-list(Class, Id)
    .shop-cart-list(class=Class id=Id)
        table
            thead
                tr
                    th.product-img IMAGE
                    th.product-name PRODUCT
                    th.product-size SIZE
                    th.product-price PRICE
                    th.product-quantity QUANTITY
                    th.product-total TOTAL
                    th.product-remove &nbsp;
            tbody
                tr.cart-item
                    td.product-img
                        a(href="#")
                            .image
                                img(src="assets/images/product-img-2.jpg", alt="Cart Item")
                    td.product-name
                        a(href="#")
                            |FACETTE WATCH BULBUL BY KIBISI
                    td.product-size -
                    td.product-price $200.00
                    td.product-quantity
                        input(type="number" name="quantity1" min="0" value="1")
                    td.product-total $200.00
                    td.product-remove
                        a(href="#")
                tr.cart-item
                    td.product-img
                        a(href="#")
                            .image
                                img(src="assets/images/shop-item-12.jpg", alt="Cart Item")
                    td.product-name
                        a(href="#")
                            |MAIAIMI MINI LATHER BAG
                    td.product-size M
